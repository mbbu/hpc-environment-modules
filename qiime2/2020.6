set appname         qiime2
set version         2020.6
set prefix          /opt/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set datarootdir     ${prefix}/share

# conflict if qiime OR python is loaded, because qiime has its own python
conflict			qiime qiime2 python

prepend-path        PATH		${exec_prefix}

# Add man pages
prepend-path        MANPATH		${datarootdir}/man
prepend-path        MANPATH		${prefix}/man

# Other environment variables extracted from examining `env` before and after
# activating qiime2 in the conda virtual environment (because the user can't
# use conda itself via modules). This is not an exact science...
setenv              PYTHONNOUSERSITE    ${prefix}/lib/python3.6/site-packages
setenv              MPLBACKEND          Agg
setenv              R_LIBS_USER         ${prefix}/lib/R/library

