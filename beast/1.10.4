set appname     beast
set version     1.10.4
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "http://beast.community"
set msg         "BEAST is a cross-platform program for Bayesian analysis of molecular sequences using MCMC.\n$appname official site: $url\n"

conflict        $appname

module-whatis   $msg

# beast can use beagle for some speedup
if { ![is-loaded beagle/3.1.2] } {
    module load beagle/3.1.2
}

prepend-path    PATH    ${exec_prefix}

