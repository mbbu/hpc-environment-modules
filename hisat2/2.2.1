set appname hisat2
set version 2.2.1
set prefix  /opt/apps/${appname}/${version}
set url     "https://daehwankimlab.github.io/hisat2/download/#version-hisat2-221"
set msg     "HISAT2 is a fast and sensitive alignment program for mapping next-generation sequencing reads to a population of human genomes.\n$appname official site: $url\n"

conflict    $appname

module-whatis $msg

prepend-path    PATH    ${prefix}

