set     appname         bamtools
set     version         2.5.1
set     prefix          /opt/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     url             "https://github.com/pezmaster31/bamtools"
set     msg             "Bamtools provides C++ API & command-line toolkit for w$"

proc ModulesHelp{ } {
    puts stderr $msg

module-whatis $msg
}

conflict $appname

prepend-path    PATH                ${exec_prefix}
prepend-path    LD_LIBRARY_PATH     ${prefix}/lib

